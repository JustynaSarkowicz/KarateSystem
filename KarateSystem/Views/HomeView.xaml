<UserControl x:Class="KarateSystem.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="625" d:DesignWidth="1050">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="230"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Text="Turnieje"
                       Foreground="White"
                       FontFamily="Montserrat"
                       FontSize="20"
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
            <Border Grid.Row="1"
                    Margin="0,0,0,40"
                    Background="#1B3663"
                    CornerRadius="10,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Najnowszy turniej:"
                               Grid.Column="0"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="18"
                               FontWeight="Medium"
                               Margin="20,10,0,0"/>
                    <Border Grid.Column="0"
                            Margin="20,50,20,20"
                            Background="#5D83B1"
                            CornerRadius="10"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Margin="0,0,10,0">
                                <TextBlock Text="Nazwa:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="Miejsce:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="Data:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBox x:Name="tbTourNameActive"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,12,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                                <TextBox x:Name="tbTourPlaceActive"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,12,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                                <TextBox x:Name="tbTourDateActive"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,10,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <TextBlock Text="Ostatnie turnieje:"
                               Grid.Column="1"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="18"
                               FontWeight="Medium"
                               Margin="20,10,0,0"/>
                    <Border Grid.Column="1"
                            Margin="20,50,20,20"
                            Background="#5D83B1"
                            CornerRadius="10"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Margin="0,0,10,0">
                                <TextBlock Text="Nazwa:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="Miejsce:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="Data:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBox x:Name="tbTourNameLast"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,12,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                                <TextBox x:Name="tbTourPlaceLast"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,12,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                                <TextBox x:Name="tbTourDateLast"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,10,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Border x:Name="BorderTourElement" Grid.Column="2"
                            Margin="20,50,20,20"
                            Background="#5D83B1"
                            CornerRadius="10"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Margin="0,0,10,0">
                                <TextBlock Text="Nazwa:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="Miejsce:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="Data:"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Margin="0,10,0,10"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBox x:Name="tbTourNameLast2"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,12,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                                <TextBox x:Name="tbTourPlaceLast2"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,12,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                                <TextBox x:Name="tbTourDateLast2"
                                         Background="Transparent"
                                         Width="250"
                                         Height="20"
                                         Margin="0,10,0,10"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#1B3663"
                    CornerRadius="10,0,0,10">
                <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Szczegóły turnieju"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="20"
                           FontWeight="Medium"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Liczba zawodników:"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Right"/>
                <TextBlock Text="Liczba  kategorii kata:"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Right"/>
                <TextBlock Text="Liczba Kata:"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Right"/>
                <TextBlock Text="Liczba kategorii kumite:"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Right"/>
                <TextBlock Text="Liczba kumite:"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Right"/>
                <TextBlock Text="Status:"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                Background="#1B3663"
                CornerRadius="0,10,10,0">
                <StackPanel HorizontalAlignment="Left"
                            Margin="5,0,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <StackPanel Grid.Row="0"
                            HorizontalAlignment="Left"
                            Margin="5,0,5,0">
                        <TextBox x:Name="tbTourCompNumber"
                         Background="Transparent"
                         Width="60"
                         Height="19"
                         Margin="0,15,0,5"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="White"
                         CaretBrush="White"
                         BorderBrush="White"
                         BorderThickness="0,0,0,1"                             
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourCatKataNumber"
                         Background="Transparent"
                         Width="60"
                         Height="19"
                         Margin="0,5,0,5"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="White"
                         CaretBrush="White"
                         BorderBrush="White"
                         BorderThickness="0,0,0,1"                             
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourKataNumber"
                         Background="Transparent"
                         Width="60"
                         Height="19"
                         Margin="0,5,0,5"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="White"
                         CaretBrush="White"
                         BorderBrush="White"
                         BorderThickness="0,0,0,1"                             
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourCatKumiteNumber"
                         Background="Transparent"
                         Width="60"
                         Height="19"
                         Margin="0,5,0,5"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="White"
                         CaretBrush="White"
                         BorderBrush="White"
                         BorderThickness="0,0,0,1"                             
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourKumiteNumber"
                         Background="Transparent"
                         Width="60"
                         Height="19"
                         Margin="0,5,0,5"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="White"
                         CaretBrush="White"
                         BorderBrush="White"
                         BorderThickness="0,0,0,1"                             
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         Style="{StaticResource textBoxEnabled}"/>
                    </StackPanel>
                    <ComboBox x:Name="cbTourStatus"
                          Width="130"
                          Style="{StaticResource comboboxStyle}"
                          Margin="5,5,0,0"
                          IsEnabled="False"
                          Grid.Row="1">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">

                <Button x:Name="btnEditTour"
                        Width="120"                           
                        Content="Zarządzaj turniejem"
                        Margin="0,5,0,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        Style="{StaticResource contentButton}"/>
                <Button x:Name="btnStatisticsTour"
                        Width="120"                          
                        Content="Zobacz statystyki"
                        Margin="10,5,0,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        Style="{StaticResource contentButton}"/>
                <Button x:Name="btnChangeStatusTour"
                        Width="120"                          
                        Content="Zmień status"
                        Margin="10,5,0,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        Style="{StaticResource contentButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
