<UserControl x:Class="KarateSystem.Views.KataKumiteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1250" d:DesignWidth="1050">
    <Grid>
        <ScrollViewer Margin="0,0,0,-15"
              Style="{StaticResource CustomScrollViewer}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Turniej:"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbTour"
                              Width="350"
                              Height="30"
                              Style="{StaticResource comboboxStyle}"
                              Margin="10,0,0,0"
                              ItemsSource="{Binding Tournaments}"
                              DisplayMemberPath="TourName"
                              SelectedItem="{Binding SelectedTourToChoseCat}"/>
                    <Button x:Name="btnSetTour"
                            Width="70"
                            Command="{Binding ChoseTourToSetCatCommand}"
                            Content="Wybierz"
                            Margin="10,0,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Kategoria Kata:"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbTourCatKata"
                              Width="292"
                              Style="{StaticResource comboboxStyle}"
                              Margin="10,0,0,0"
                              ItemsSource="{Binding TourCatKatas}"
                              SelectedItem="{Binding SelectedTourCatKata}"
                              DisplayMemberPath="KataCatName"/>

                    <TextBlock Text="Mata: "
                               FontSize="16"
                               Margin="20,0,5,0"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox  Width="100" 
                              Background="Transparent"                                   
                              FontWeight="Medium"
                              FontFamily="Montserrat"                            
                              Foreground="White"
                              CaretBrush="White"
                              BorderBrush="White"
                              BorderThickness="0,0,0,1"                             
                              VerticalContentAlignment="Center"
                              IsReadOnly="True"/>
                </StackPanel>

                <Grid Grid.Row="2"
                      VerticalAlignment="Top"
                      Margin="20,0,20,0">
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              Style="{DynamicResource DataGridStyle1}"
                              Height="390"
                              ItemsSource="{Binding Katas}"
                              SelectedItem="{Binding SelectedKata}"
                              SelectionMode="Single">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Numeration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nr"/>
                            <DataGridTextColumn Binding="{Binding CompFirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Imię"/>
                            <DataGridTextColumn Binding="{Binding CompLastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwisko"/>
                            <DataGridTextColumn Binding="{Binding KataRate1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Ocena 1"/>
                            <DataGridTextColumn Binding="{Binding KataRate2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Ocena 2"/>
                            <DataGridTextColumn Binding="{Binding KataRate3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Ocena 3"/>
                            <DataGridTextColumn Binding="{Binding KataRate4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Ocena 4"/>
                            <DataGridTextColumn Binding="{Binding KataRate5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Ocena 5"/>
                            <DataGridTextColumn Binding="{Binding KataScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Średnia z ocen"/>
                            <DataGridTextColumn Binding="{Binding OvertimeDisplay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Dogrywka"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid Grid.Row="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#1B3663"
                        CornerRadius="10"
                        Grid.Column="0"                        
                        Margin="10,10,10,0"
                        Height="70">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="10,0,10,0">

                            <TextBlock Text="Nr" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="40"
                                       TextAlignment="Center"/>
                            <TextBlock Text="Imię" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="160"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Text="Nazwisko" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="180"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Text="Ocena 1" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="80"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Text="Ocena 2" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="80"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Text="Ocena 3" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="80"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Text="Ocena 4" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="80"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <TextBlock Text="Ocena 5" 
                                       FontSize="17"
                                       FontFamily="Montserrat"
                                       Foreground="White"
                                       Width="80"
                                       TextAlignment="Center"
                                       Margin="10,0,0,0"/>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1">
                            <TextBox Width="40" 
                                     Margin="10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0"                             
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Text="{Binding EditingKata.Numeration, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Width="160" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0"                             
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Text="{Binding EditingKata.CompFirstName, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Width="180" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0"                             
                                     TextAlignment="Center"
                                     IsReadOnly="True"
                                     Text="{Binding EditingKata.CompLastName, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Width="80" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"                             
                                     TextAlignment="Center"
                                     MaxLength="3"
                                     PreviewTextInput="tbRate_PreviewTextInput"
                                     Text="{Binding EditingKata.KataRate1, UpdateSourceTrigger=LostFocus, FallbackValue=0}"
                                     />
                            <TextBox Width="80" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"                             
                                     TextAlignment="Center"
                                     MaxLength="3"
                                     PreviewTextInput="tbRate_PreviewTextInput"
                                     Text="{Binding EditingKata.KataRate2, UpdateSourceTrigger=LostFocus, FallbackValue=0}"
                                     />
                            <TextBox Width="80" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"                             
                                     TextAlignment="Center"
                                     MaxLength="3"
                                     PreviewTextInput="tbRate_PreviewTextInput"
                                     Text="{Binding EditingKata.KataRate3, UpdateSourceTrigger=LostFocus, FallbackValue=0}"
                                     />
                            <TextBox Width="80" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"                             
                                     TextAlignment="Center"
                                     MaxLength="3"
                                     PreviewTextInput="tbRate_PreviewTextInput"
                                     Text="{Binding EditingKata.KataRate4, UpdateSourceTrigger=LostFocus, FallbackValue=0}"
                                     />
                            <TextBox Width="80" 
                                     Margin="0,5,10,5"
                                     Background="Transparent"                                   
                                     FontWeight="Medium"
                                     FontFamily="Montserrat"                            
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"                             
                                     TextAlignment="Center"
                                     MaxLength="3"
                                     PreviewTextInput="tbRate_PreviewTextInput"
                                     Text="{Binding EditingKata.KataRate5, UpdateSourceTrigger=LostFocus, FallbackValue=0}"
                                     />
                        </StackPanel>
                    </Grid>
                </Border>
                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom">
                        <Button 
                                x:Name="btnEditKata"                           
                                Content="Edytuj"     
                            Command="{Binding EditKataCommand}"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Width="120"
                            Margin="0,0,0,10"
                            IsEnabled="{Binding IsEnabled}"
                                Style="{StaticResource contentButton}"/>
                        <Button 
                                x:Name="btnSetRates"                           
                                Content="Zapisz"     
                            Command="{Binding SetGradesToKataCommand}"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Width="120"
                            IsEnabled="{Binding IsEnabled}"
                                Style="{StaticResource contentButton}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="4"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Miejsce w dogrywce:"
                               FontSize="17"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbSelectedKataOvertime"
                              Width="200"
                              Style="{StaticResource comboboxStyle}"
                              Margin="15,0,0,0"
                              ItemsSource="{Binding OvertimeOptions}"
                              SelectedItem="{Binding SelectedOvertime, Mode=TwoWay}"
                              DisplayMemberPath="DisplayName"/>
                    </StackPanel>
                </Grid>
                <Border Grid.Row="5"
                        BorderBrush="#5D83B1"
                        BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Kategoria Kumite:"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbTourCatKumite"
                                  Width="292"
                                  Style="{StaticResource comboboxStyle}"
                                  Margin="10,0,0,0"
                                  ItemsSource="{Binding TourCatKumites}"
                                  SelectedItem="{Binding SelectedTourCatKumite}"
                                  DisplayMemberPath="KumiteCatName"/>

                        <TextBlock Text="Mata: "
                               FontSize="16"
                               Margin="20,0,5,0"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                        <TextBox  Width="70" 
                              Background="Transparent"                                   
                              FontWeight="Medium"
                              FontFamily="Montserrat"                            
                              Foreground="White"
                              CaretBrush="White"
                              BorderBrush="White"
                              BorderThickness="0,0,0,1"                             
                              VerticalContentAlignment="Center"
                              IsReadOnly="True"/>
                    </StackPanel>
                </Border>
                <Grid Grid.Row="6"
                      VerticalAlignment="Top"
                      Margin="20,0,20,0">
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              Style="{DynamicResource DataGridStyle1}"
                              Height="390"
                              SelectionMode="Single">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nr"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Zawodnik A"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Punkty A"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Zawodnik B"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Liczba dogrywek"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Czas trwania"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Walkower"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wygrany"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
