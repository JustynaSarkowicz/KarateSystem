<UserControl x:Class="KarateSystem.Views.ClubsDegreesMatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateSystem.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1050">

    <ScrollViewer Margin="0,0,0,-15"
                  Style="{StaticResource CustomScrollViewer}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="450"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Kluby"
                       Foreground="White"
                       FontFamily="Montserrat"
                       FontSize="20"
                       Width="700"
                       FontWeight="Medium"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       TextAlignment="Center"
                       Grid.Row="0"
                       Margin="0,0,0,10"/>

            <Grid Grid.Row="1"
                  Margin="10,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="700"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Grid.Column="0">
                        <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="White"/>

                        <TextBox x:Name="tbSearchClub"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"  
                                 materialDesign:HintAssist.Hint="Szukaj..."
                                 materialDesign:HintAssist.Foreground="White"
                                 Style="{StaticResource TransparentHintTextBox}"/>
                    </StackPanel>
                </Grid>

                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          Height="290"
                          VerticalAlignment="Top"
                          Grid.Row="1"
                          ItemsSource="{Binding Clubs}"
                          SelectedItem="{Binding SelectedClub}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ClubId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Id" Width="50"/>
                        <DataGridTextColumn Binding="{Binding ClubPlace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Miejsce" Width="200"/>
                        <DataGridTextColumn Binding="{Binding ClubName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwa" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Border Grid.Row="2"
                        CornerRadius="10"
                        BorderBrush="#1B3663"
                        Background="#1B3663">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Miejsce"
                                   Foreground="#BCBEE0"
                                   FontFamily="Montserrat"
                                   FontSize="14"
                                   Margin="10,0,5,0"
                                   Grid.Column="0"
                                   Grid.Row="0"/>

                        <Border Margin="10,3,0,3"
                                CornerRadius="10"
                                Background="#5D83B1"
                                Grid.Row="1"
                                Grid.Column="0">
                            <TextBox x:Name="tbClubPlace" 
                                     Text="{Binding EditingClub.ClubPlace, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="3"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Style="{StaticResource textBoxEnabled}"/>
                        </Border>

                        <TextBlock Text="Nazwa"
                                   Foreground="#BCBEE0"
                                   FontFamily="Montserrat"
                                   FontSize="14"
                                   Grid.Column="1"
                                   Grid.Row="0"
                                   Margin="5,0,5,0"/>

                        <Border Margin="5,3,10,3"
                                CornerRadius="10"
                                Background="#5D83B1"
                                Grid.Row="1"
                                Grid.Column="1">
                            <TextBox x:Name="tbClubName"
                                     Text="{Binding EditingClub.ClubName, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="3"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Style="{StaticResource textBoxEnabled}"/>
                        </Border>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Orientation="Vertical"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Margin="5,5,5,0">
                    <Button x:Name="btnSaveClub"
                            Width="80"    
                            Command="{Binding UpdateClubCommand}"                            
                            Content="Zapisz"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            IsEnabled="{Binding IsEditingExistingClub}"
                            Style="{StaticResource contentButton}">
                    </Button>

                    <Button x:Name="btnCancelEdit"
                            Command="{Binding CancelClubCommand}"
                            Width="80"                         
                            Content="Anuluj"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource contentButton}"/>

                    <Button x:Name="btnEditClub"
                            Width="80"
                            Command="{Binding EditClubCommand}"                            
                            Content="Edytuj"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource contentButton}">
                    </Button>

                    <Button x:Name="btnAddNewClub"
                            Width="80"
                            Command="{Binding AddClubCommand}"                            
                            Content="Dodaj"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            VerticalAlignment="Bottom"
                            IsEnabled="{Binding IsAddingNewClub}"
                            Style="{StaticResource contentButton}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Margin="10,0,10,0"
                      Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Stopnie"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="16"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,10"
                               Grid.Row="0"/>

                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              Style="{DynamicResource DataGridStyle1}"
                              Height="290"
                              VerticalAlignment="Top"
                              Grid.Row="1"
                              ItemsSource="{Binding Degrees}"
                              SelectedItem="{Binding SelectedDegree}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding DegreeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Id"/>
                            <DataGridTextColumn Binding="{Binding DegreeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2"
                            CornerRadius="10"
                            BorderBrush="#1B3663"
                            Background="#1B3663">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="16"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0">
                                <TextBlock Text="Nazwa"
                                           Foreground="#BCBEE0"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           Width="200"
                                           Margin="10,0,5,0"/>
                                <TextBlock/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal">
                                <Border Margin="10,3,0,3"
                                        CornerRadius="10"
                                        Background="#5D83B1"
                                        Width="310">
                                    <TextBox x:Name="tbDegreeName"
                                             Padding="3"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Text="{Binding EditingDegree.DegreeName, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource textBoxEnabled}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="2"
                      Margin="10,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Maty"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="16"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,10"
                               Grid.Row="0"/>

                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                              CellStyle="{DynamicResource DataGridCellStyle1}" 
                              Style="{DynamicResource DataGridStyle1}"
                              Height="290"
                              VerticalAlignment="Top"
                              Grid.Row="1" 
                              ItemsSource="{Binding Mats}"
                              SelectedItem="{Binding SelectedMat}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding MatId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Id" Width="60"/>
                            <DataGridTextColumn Binding="{Binding MatName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2"
                            CornerRadius="10"
                            BorderBrush="#1B3663"
                            Background="#1B3663">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="16"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0">
                                <TextBlock Text="Nazwa"
                                           Foreground="#BCBEE0"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           Width="200"
                                           Margin="10,0,5,0"/>
                                <TextBlock/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal">
                                <Border Margin="10,3,0,3"
                                        CornerRadius="10"
                                        Background="#5D83B1"
                                        Width="310">
                                    <TextBox x:Name="tbMatName"
                                             Padding="3"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Text="{Binding EditingMat.MatName, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource textBoxEnabled}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="3,55,3,3">
                    <Button x:Name="btnSaveDegree"
                            Width="80"
                            Command="{Binding UpdateDegreeCommand}"                            
                            Content="Zapisz"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            IsEnabled="{Binding IsEditingExistingDegree}"
                            Style="{StaticResource contentButton}">
                    </Button>

                    <Button x:Name="btnCancelDegree"
                            Width="80"
                            Command="{Binding CancelDegreeCommand}"                            
                            Content="Anuluj"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}">
                    </Button>

                    <Button x:Name="btnEditDegree"
                            Width="80"
                            Command="{Binding EditDegreeCommand}"                            
                            Content="Edytuj"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}">
                    </Button>

                    <Button x:Name="btnAddNewDegree"
                            Width="80"
                            Command="{Binding AddDegreeCommand}"                            
                            Content="Dodaj"
                            Margin="0,0,3,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            IsEnabled="{Binding IsAddingNewDegree}"
                            Style="{StaticResource contentButton}">
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="3"
                            Orientation="Vertical"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="3,55,3,3">
                    <Button x:Name="btnSaveMat"
                            Width="80"
                            Command="{Binding UpdateMatCommand}"                            
                            Content="Zapisz"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            IsEnabled="{Binding IsEditingExistingMat}"
                            Style="{StaticResource contentButton}"/>

                    <Button x:Name="btnCancelMat"
                            Width="80"
                            Command="{Binding CancelMatCommand}"                            
                            Content="Anuluj"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>

                    <Button x:Name="btnEditMat"
                            Width="80"
                            Command="{Binding EditMatCommand}"                            
                            Content="Edytuj"
                            Margin="0,0,0,5"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>

                    <Button x:Name="btnAddNewMat"
                            Width="80"
                            Command="{Binding AddMatCommand}"                            
                            Content="Dodaj"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            IsEnabled="{Binding IsAddingNewMat}"
                            Style="{StaticResource contentButton}"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2"
                    Grid.ColumnSpan="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#5D83B1"
                    Margin="0,10,10,0"/>
        </Grid>
    </ScrollViewer>
</UserControl>