                                        Grid.Column="1"
                                        Command="{Binding LoginCommand}"                            
                                        Content="Dodaj zawodnika"                            
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Width="120"
                                        Margin="0,0,0,5"
                                        Style="{StaticResource contentButton}"/>

                                <Button x:Name="btnDeleteCompFromCatKata" 
                                        Grid.Column="1"
                                        Command="{Binding LoginCommand}"                            
                                        Content="Usuń zawodnika"                            
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Width="120"
                                        Margin="0,0,0,5"
                                        Style="{StaticResource contentButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Wybór kategorii Kumite -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Kategorie Kumite:"
                                   FontSize="16"
                                   FontFamily="Montserrat"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>

                        <ComboBox x:Name="cbTourCatKumite"
                                  Width="292"
                                  Style="{StaticResource comboboxStyle}"
                                  Margin="10,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Lista zawodników Kumite -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Lista zawodników Kumite"
                                       FontFamily="Montserrat"
                                       FontSize="20"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>

                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                                      Style="{DynamicResource DataGridStyle1}"
                                      Height="265">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="ID" HeaderStringFormat=""/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Imię"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nazwisko"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Data Urodzenia"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wiek"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Płeć"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Waga"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Stopień"/>
                                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Klub"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <Button x:Name="btnAddCompToCatKumite" 
                                    Grid.Column="1"
                                    Command="{Binding LoginCommand}"                            
                                    Content="Dodaj zawodnika"                            
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Foreground="White"
                                    Width="120"
                                    Margin="0,0,0,5"
                                    Style="{StaticResource contentButton}"/>

                            <Button x:Name="btnDeleteCompFromCatKumite" 
                                    Grid.Column="1"
                                    Command="{Binding LoginCommand}"                            
                                    Content="Usuń zawodnika"                            
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Foreground="White"
                                    Width="120"
                                    Margin="0,0,0,50"
                                    Style="{StaticResource contentButton}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>