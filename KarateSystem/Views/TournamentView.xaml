<UserControl x:Class="KarateSystem.Views.TournamentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateSystem.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="1550" d:DesignWidth="1050">

    <!-- Główny kontener zakładek -->
    <TabControl Background="Transparent"
                Margin="-15,0,0,-15"
                BorderThickness="0,5,0,0"
                BorderBrush="#5D83B1">

        <!-- Pierwsza zakładka - Dodaj/Edytuj -->
        <TabItem Header="Dodaj/Edytuj" Style="{StaticResource tabItem}">
            <ScrollViewer Margin="0,0,0,0" Style="{StaticResource CustomScrollViewer}">
                <Grid Margin="10,10,10,0" Height="1550">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="220"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="320"/>
                        <RowDefinition Height="420"/>
                        <RowDefinition Height="420"/>
                    </Grid.RowDefinitions>

                    <!-- Nagłówek i wyszukiwarka turniejów -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0">
                            <TextBlock Text="Lista Turniejów"
                                       Foreground="White"
                                       FontFamily="Montserrat"
                                       FontSize="18"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="White"/>

                            <TextBox x:Name="tbSearchTour"
                                     Text="{Binding SearchTextTour, UpdateSourceTrigger=PropertyChanged}"  
                                     materialDesign:HintAssist.Hint="Szukaj..."
                                     materialDesign:HintAssist.Foreground="White"
                                     Style="{StaticResource TransparentHintTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Lista turniejów i szczegóły -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>

                        <!-- DataGrid z listą turniejów -->
                        <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  Style="{DynamicResource DataGridStyle1}"
                                  Grid.Column="0"
                                  ItemsSource="{Binding Tournaments}"
                                  SelectedItem="{Binding SelectedTour}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding TourId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="ID" Width="50"/>
                                <DataGridTextColumn Binding="{Binding TourName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                                <DataGridTextColumn Binding="{Binding TourPlace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Miejsce"/>
                                <DataGridTextColumn Binding="{Binding TourDate, StringFormat='dd.MM.yyyy', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Data"/>
                                <DataGridTextColumn Binding="{Binding StatusDisplay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Status" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Panel szczegółów turnieju -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition />
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="Szczegóły"
                                       Foreground="White"
                                       FontFamily="Montserrat"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- Etykiety pól -->
                            <StackPanel Grid.Column="0" Grid.Row="1">
                                <TextBlock Text="Nazwa"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,10,0,20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Miejsce"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,0,0,20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Data"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,0,0,20"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Status"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="0,0,0,20"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Pola edycji -->
                            <StackPanel Grid.Column="1" Grid.Row="1">
                                <TextBox x:Name="tbTourName"
                                         Background="Transparent"
                                         Width="250"
                                         Text="{Binding EditingTour.TourName, UpdateSourceTrigger=PropertyChanged}"
                                         Height="19"
                                         FontSize="14"
                                         Margin="0,8,0,20"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         TextAlignment="Center"
                                         Style="{StaticResource textBoxEnabled}"/>

                                <TextBox x:Name="tbTourPlace"
                                         Background="Transparent"
                                         Text="{Binding EditingTour.TourPlace, UpdateSourceTrigger=PropertyChanged}"
                                         TextAlignment="Center"
                                         Width="250"
                                         Height="19"
                                         Margin="0,0,0,12"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         Style="{StaticResource textBoxEnabled}"/>

                                <DatePicker SelectedDate="{Binding EditingTour.TourDate, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource DatePickerStyle}"
                                            Width="250"
                                            Margin="0,0,0,10"/>

                                <ComboBox x:Name="cbCompetitorGender"
                                          Width="250"
                                          ItemsSource="{Binding StatusOptions}"
                                          SelectedItem="{Binding SelectedStatus, Mode=TwoWay}"
                                          DisplayMemberPath="DisplayName"
                                          Style="{StaticResource comboboxStyle}"/>
                            </StackPanel>

                            <!-- Przyciski akcji -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button x:Name="btnSaveTour"
                                        Width="70"
                                        Command="{Binding UpdateTourCommand}"
                                        IsEnabled="{Binding IsEditingExisting}"
                                        Content="Zapisz"
                                        Margin="0,0,3,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Style="{StaticResource contentButton}"/>

                                <Button x:Name="btnCancelTour"
                                        Width="70"
                                        Command="{Binding CancelTourCommand}"                            
                                        Content="Anuluj"
                                        Margin="0,0,3,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Style="{StaticResource contentButton}"/>

                                <Button x:Name="btnEditTour"
                                        Width="70"
                                        Command="{Binding EditTourCommand}"                            
                                        Content="Edytuj"
                                        Margin="0,0,3,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Style="{StaticResource contentButton}"/>

                                <Button x:Name="btnAddNewTour"
                                        Width="70"
                                        Command="{Binding AddTourCommand}" 
                                        IsEnabled="{Binding IsAddingNew}"
                                        Content="Dodaj"
                                        Margin="0,0,3,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Style="{StaticResource contentButton}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Separator -->
                    <Border Grid.Row="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#5D83B1"
                            Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,10"
                                       Grid.Column="0">
                                <TextBlock Text="Lista Zawodników"
                                           Foreground="White"
                                           FontFamily="Montserrat"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,20,0"/>
                                <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="White"/>

                                <TextBox x:Name="tbSearchTourComp"
                                         Text="{Binding SearchTextTourComp, UpdateSourceTrigger=PropertyChanged}"  
                                         materialDesign:HintAssist.Hint="Szukaj..."
                                         materialDesign:HintAssist.Foreground="White"
                                         Style="{StaticResource TransparentHintTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Filtrowanie zawodników -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0">
                            <TextBlock Text="Kategoria"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       Foreground="White"/>

                            <ComboBox x:Name="cbFilterCategories"
                                      Width="150"
                                      Style="{StaticResource comboboxStyle}"
                                      Margin="5, 0,0 ,0"
                                      ItemsSource="{Binding FilterTypes}"
                                      SelectedItem="{Binding SelectedFilterType, Mode=TwoWay}"/>

                            <ComboBox x:Name="cbCategoriesDetails"
                                      Width="150"
                                      Style="{StaticResource comboboxStyle}"
                                      Margin="5, 0,0 ,0" 
                                      ItemsSource="{Binding FilterValues}"
                                      SelectedItem="{Binding SelectedFilterValue, Mode=TwoWay}"/>
                        </StackPanel>

                        <Button x:Name="btnFilterTourCompetitor"
                                Grid.Column="1"
                                Command="{Binding FilterCompCommand}"                            
                                Content="Filtruj"                            
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                VerticalAlignment="Top"
                                Style="{StaticResource contentButton}"/>
                    </Grid>

                    <!-- Lista zawodników -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  Style="{DynamicResource DataGridStyle1}"
                                  Grid.Column="0"
                                  ItemsSource="{Binding CompetitorsTour}"
                                  SelectedItem="{Binding SelectedCompetitorTour}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding CompId, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="ID" Width="50"/>
                                <DataGridTextColumn Binding="{Binding CompFirstName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Imię" Width="150"/>
                                <DataGridTextColumn Binding="{Binding CompLastName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwisko" Width="150"/>
                                <DataGridTextColumn Binding="{Binding CompDateOfBirth, StringFormat='dd.MM.yyyy', Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Data Urodzenia" Width="120"/>
                                <DataGridTextColumn Binding="{Binding CompAge, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Wiek" Width="70"/>
                                <DataGridTextColumn Binding="{Binding GenderDisplay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Płeć" Width="120"/>
                                <DataGridTextColumn Binding="{Binding CompWeight, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Waga" Width="80"/>
                                <DataGridTextColumn Binding="{Binding DegreeName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Stopień" Width="100"/>
                                <DataGridTextColumn Binding="{Binding ClubName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Klub" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Przyciski akcji dla zawodników -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,5">
                            <Button x:Name="btnTourAddComp"
                                    Width="70"
                                    Command="{Binding LoginCommand}"                            
                                    Content="Dodaj"
                                    Click="btnTourAddComp_Click"
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Foreground="White"
                                    IsEnabled="{Binding IsEditingExisting}"
                                    Style="{StaticResource contentButton}"/>

                            <Button x:Name="btnTourDeleteComp"
                                    Width="70"
                                    Command="{Binding DeleteCompFromTourCommand}"                            
                                    Content="Usuń"
                                    Margin="5,5,0,0"
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Foreground="White"
                                    Style="{StaticResource contentButton}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Sekcja kategorii Kata -->
                    <Border Grid.Row="5" Margin="0,5,0,0" BorderThickness="0,1,0,0" BorderBrush="#5D83B1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="320"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Kategoria Kata"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Foreground="White"
                                       FontFamily="Montserrat"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                                      Style="{DynamicResource DataGridStyle1}"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      ItemsSource="{Binding CatKataTour}"
                                      SelectedItem="{Binding SelectedCatKataTour}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding KataCatId, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="ID" HeaderStringFormat=""/>
                                    <DataGridTextColumn Binding="{Binding KataCatName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                                    <DataGridTextColumn Binding="{Binding GenderDisplay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Płeć"/>
                                    <DataGridTextColumn Binding="{Binding KataCatAgeMin, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Wiek Min"/>
                                    <DataGridTextColumn Binding="{Binding KataCatAgeMax, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Wiek Max"/>
                                    <DataGridTextColumn Binding="{Binding DegreesDisplay, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Stopnie"/>
                                    <DataGridTextColumn Binding="{Binding MatName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Mata"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Margin="0,10,0,0" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0">
                                <TextBlock Text="Kategoria kata: "
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>

                                <ComboBox x:Name="cbChoseTourCatKata"
                                          Width="325"
                                          Style="{StaticResource comboboxStyle}"
                                          ItemsSource="{Binding KataCategories}"
                                          SelectedItem="{Binding SelectedKataCategory, Mode=TwoWay}"
                                          DisplayMemberPath="KataCatName"/>

                                <TextBlock Text="Mata: "
                                           VerticalAlignment="Center"
                                           Margin="20,0,5,0"/>

                                <ComboBox x:Name="cbChoseTourCatKataMat"
                                          Width="200"
                                          Style="{StaticResource comboboxStyle}"
                                          ItemsSource="{Binding Mats}"
                                          SelectedItem="{Binding SelectedKataCategoryMat, Mode=TwoWay}"
                                          DisplayMemberPath="MatName"/>

                                <Button x:Name="btnTourAddCatKata"
                                        Width="70"
                                        Command="{Binding AddCatKataFromTourCommand}"                            
                                        Content="Dodaj"
                                        Margin="10,0,0,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        IsEnabled="{Binding IsEditingExisting}"
                                        Style="{StaticResource contentButton}"/>

                                <Button x:Name="btnTourDeleteCatKata"
                                        Width="70"
                                        Command="{Binding DeleteCatKataFromTourCommand}"                            
                                        Content="Usuń"
                                        Margin="10,0,0,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Style="{StaticResource contentButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Sekcja kategorii Kumite -->
                    <Border Grid.Row="6" Margin="0,5,0,0" BorderThickness="0,1,0,0" BorderBrush="#5D83B1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="320"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Kategoria Kumite"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       Foreground="White"
                                       FontFamily="Montserrat"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                                      Style="{DynamicResource DataGridStyle1}"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,0,0"
                                      ItemsSource="{Binding CatKumiteTour}"
                                      SelectedItem="{Binding SelectedCatKumiteTour}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding KumiteCatId, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="ID" HeaderStringFormat="" Width="50"/>
                                    <DataGridTextColumn Binding="{Binding KumiteCatName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                                    <DataGridTextColumn Binding="{Binding GenderDisplay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Płeć"/>
                                    <DataGridTextColumn Binding="{Binding KumiteCatAgeMin, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Wiek Min"/>
                                    <DataGridTextColumn Binding="{Binding KumiteCatAgeMax, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Wiek Max"/>
                                    <DataGridTextColumn Binding="{Binding KumiteCatWeightMin, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Waga Min"/>
                                    <DataGridTextColumn Binding="{Binding KumiteCatWeightMax, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Waga Max"/>
                                    <DataGridTextColumn Binding="{Binding MatName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" ClipboardContentBinding="{x:Null}" Header="Mata"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Margin="0,10,0,0" Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                <TextBlock Text="Kategoria kumite: "
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>

                                <ComboBox x:Name="cbChoseTourCatKumite"
                                          Width="325"
                                          Style="{StaticResource comboboxStyle}"
                                          ItemsSource="{Binding KumiteCategories}"
                                          SelectedItem="{Binding SelectedKumiteCategory, Mode=TwoWay}"
                                          DisplayMemberPath="KumiteCatName"/>

                                <TextBlock Text="Mata: "
                                           VerticalAlignment="Center"
                                           Margin="20,0,5,0"/>

                                <ComboBox x:Name="cbChoseTourCatKumiteMat"
                                          Width="200"
                                          Style="{StaticResource comboboxStyle}"
                                          ItemsSource="{Binding Mats}"
                                          SelectedItem="{Binding SelectedKumiteCategoryMat, Mode=TwoWay}"
                                          DisplayMemberPath="MatName"/>

                                <Button x:Name="btnTourAddCatKumite"
                                        Width="70"
                                        Command="{Binding AddCatKumiteFromTourCommand}"                            
                                        Content="Dodaj"
                                        Margin="10,0,0,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        IsEnabled="{Binding IsEditingExisting}"
                                        Style="{StaticResource contentButton}"/>

                                <Button x:Name="btnTourDeleteCatKumite"
                                        Width="70"
                                        Command="{Binding DeleteCatKumiteFromTourCommand}"                            
                                        Content="Usuń"
                                        Margin="10,0,0,0"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Style="{StaticResource contentButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Puste miejsce na dole -->
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Druga zakładka - Przypisz do kategorii -->
        <TabItem Header="Przypisz do kategori" Style="{StaticResource tabItem}">
            <ScrollViewer Margin="0,0,0,0" Style="{StaticResource CustomScrollViewer}">
                <Grid Margin="15,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="350"/>
                    </Grid.RowDefinitions>

                    <!-- Wybór turnieju -->
                    <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#5D83B1" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Turniej:"
                                           FontSize="16"
                                           FontFamily="Montserrat"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>

                                <ComboBox x:Name="cbTour"
                                          Width="350"
                                          Style="{StaticResource comboboxStyle}"
                                          Margin="10,0,0,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <Button x:Name="btnSetAutomaticCompToCat" 
                                    Grid.Column="1"
                                    Command="{Binding LoginCommand}"                            
                                    Content="Przypisz automatycznie"                            
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource contentButton}"/>
                        </Grid>
                    </Border>

                    <!-- Wybór kategorii Kata -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Kategorie Kata:"
                                   FontSize="16"
                                   FontFamily="Montserrat"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>

                        <ComboBox x:Name="cbTourCatKata"
                                  Width="292"
                                  Style="{StaticResource comboboxStyle}"
                                  Margin="10,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Lista zawodników Kata -->
                    <Border Grid.Row="2" BorderThickness="0,0,0,1" BorderBrush="#5D83B1" Margin="0,0,0,0">
                        <Grid Margin="0,0,0,5">
