<UserControl x:Class="KarateSystem.Views.TournamentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarateSystem.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1050">
    <TabControl Background="Transparent"
                Margin="-15,0,0,-15"
                BorderThickness="0,5,0,0"
                BorderBrush="#5D83B1">
        <TabItem Header="Dodaj/Edytuj"
                 Style="{StaticResource tabItem}">
    <ScrollViewer Margin="0,0,0,0"
              Style="{StaticResource CustomScrollViewer}">
        <Grid Margin="10,10,10,0"
              Height="1150">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="320"/>
                <RowDefinition Height="420"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Top"
                            Grid.Column="0">
                    <TextBlock Text="Lista Turniejów"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="18"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="White"/>

                    <TextBox x:Name="tbSearchTour"
                             Text="Szukaj..."   
                             FontSize="13"
                             Height="24"
                             Width="300"
                             Background="Transparent"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="White"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"                             
                             VerticalContentAlignment="Center"
                             Margin="5,5,0,0"/>
                </StackPanel>

                <Button x:Name="btnSearchTour" 
                        Grid.Column="1"
                        Click="btnSearchTour_Click"
                        Command="{Binding LoginCommand}"                            
                        Content="Wyszukaj"                            
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        VerticalAlignment="Top"
                        Style="{StaticResource contentButton}">
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          Grid.Column="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="ID" HeaderStringFormat=""/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Miejsce"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Data"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Stan"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition />
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="Szczegóły"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="16"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="0"
                                Grid.Row="1">

                        <TextBlock Text="Nazwa"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,10,0,20"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Miejsce"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Data"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Status"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Grid.Row="1">

                        <TextBox x:Name="tbTourName"
                                         Background="Transparent"
                                         Width="180"
                                         Height="19"
                                         Margin="0,8,0,20"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourPlace"
                                         Background="Transparent"
                                         Width="180"
                                         Height="19"
                                         Margin="0,0,0,18"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourDate"
                                         Background="Transparent"
                                         Width="180"
                                         Height="19"
                                         Margin="0,0,0,20"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                        <TextBox x:Name="tbTourStatus"
                                         Background="Transparent"
                                         Width="180"
                                         Height="19"
                                         Margin="0,0,0,15"
                                         FontWeight="Medium"
                                         FontFamily="Montserrat"                            
                                         Foreground="White"
                                         CaretBrush="White"
                                         BorderBrush="White"
                                         BorderThickness="0,0,0,1"                             
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Style="{StaticResource textBoxEnabled}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2"
                                Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button x:Name="btnSaveTour"
                                Width="70"
                                Command="{Binding LoginCommand}"                            
                                Content="Zapisz"
                                Click="btnSaveTour_Click"
                                Margin="0,0,3,0"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                Style="{StaticResource contentButton}">
                        </Button>
                        <Button x:Name="btnEditTour"
                                Width="70"
                                Command="{Binding LoginCommand}"                            
                                Content="Edytuj"
                                Click="btnEditTour_Click"
                                Margin="0,0,3,0"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                Style="{StaticResource contentButton}">
                        </Button>
                        <Button x:Name="btnAddNewTour"
                                Width="70"
                                Command="{Binding LoginCommand}"                            
                                Content="Dodaj"
                                Click="btnAddNewTour_Click"
                                Margin="0,0,3,0"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                Style="{StaticResource contentButton}">
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
            <Border Grid.Row="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#5D83B1"
                    Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,10"
                            Grid.Column="0">
                    <TextBlock Text="Lista Zawodników"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="18"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="White"/>

                    <TextBox x:Name="tbSearchTourComp"
                             Text="Szukaj..."   
                             FontSize="13"
                             Height="24"
                             Width="300"
                             Background="Transparent"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="White"
                             BorderBrush="White"
                             BorderThickness="0,0,0,1"                             
                             VerticalContentAlignment="Center"
                             Margin="5,5,0,0"/>
                </StackPanel>

                <Button x:Name="btnSearchTourComp" 
                        Grid.Column="1"
                        Click="btnSearchTourComp_Click"
                        Command="{Binding LoginCommand}"                            
                        Content="Wyszukaj"                            
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,10"
                        Style="{StaticResource contentButton}">
                </Button>
            </Grid>
            </Border>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Top"
                            Grid.Column="0">
                    <TextBlock Text="Kategoria"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="White"/>
                    <ComboBox x:Name="cbFilterCategories"
                              Width="150"
                              Style="{StaticResource comboboxStyle}"
                              Margin="5, 0,0 ,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox x:Name="cbCategoriesDetails"
                              Width="150"
                              Style="{StaticResource comboboxStyle}"
                              Margin="5, 0,0 ,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <Button x:Name="btnFilterTourCompetitor"
                        Click="btnFilterTourCompetitor_Click"
                        Grid.Column="1"
                        Command="{Binding LoginCommand}"                            
                        Content="Filtruj"                            
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        VerticalAlignment="Top"
                        Style="{StaticResource contentButton}">
                </Button>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          Grid.Column="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="ID" HeaderStringFormat=""/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Imię"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nazwisko"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Data Urodzenia"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wiek"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Płeć"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Waga"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Stopień"/>
                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Klub"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,5">
                    <Button x:Name="btnTourAddComp"
                            Width="70"
                            Command="{Binding LoginCommand}"                            
                            Content="Dodaj"
                            Click="btnTourAddComp_Click"
                            Margin="5,0,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>
                    
                    <Button x:Name="btnTourDeleteComp"
                            Width="70"
                            Command="{Binding LoginCommand}"                            
                            Content="Usuń"
                            Click="btnTourDeleteComp_Click"
                            Margin="5,5,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>
                    
                </StackPanel>
            </Grid>
            <Border Grid.Row="5"
                    Margin="0,5,0,0"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#5D83B1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="320"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Kategoria Kata"
                           Grid.Row="0"
                           Grid.Column="0"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          Grid.Row="1"
                          Grid.Column="0"
                          Margin="0,0,20,0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Płeć"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wiek Min"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wiek Max"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Stopnie"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Margin="0,10,0,0"
                            Grid.Row="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            Grid.Column="0">
                        <ComboBox x:Name="cbFilterTourCatKata"
                                    Width="325"
                                    Style="{StaticResource comboboxStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button x:Name="btnTourAddCatKata"
                            Width="70"
                            Command="{Binding LoginCommand}"                            
                            Content="Dodaj"
                            Click="btnTourAddCatKata_Click"
                            Margin="10,0,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>

                        <Button x:Name="btnTourDeleteCatKata"
                            Width="70"
                            Command="{Binding LoginCommand}"                            
                            Content="Usuń"
                            Click="btnTourDeleteCatKata_Click"
                            Margin="10,0,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>
                    </StackPanel>
                    <TextBlock Text="Kategoria Kumite"
                           Grid.Row="0"
                           Grid.Column="1"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          Style="{DynamicResource DataGridStyle1}"
                          Grid.Row="1"
                          Grid.Column="1"
                          Margin="0,0,0,0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nazwa"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Płeć"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wiek Min"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Wiek Max"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Waga Min"/>
                            <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Waga Max"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Margin="0,10,0,0"
                            Grid.Row="2"
                            Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Top">
                        <ComboBox x:Name="cbFilterTourCatKumite"
                          Width="325"
                          Style="{StaticResource comboboxStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button x:Name="btnTourAddCatKumite"
                            Width="70"
                            Command="{Binding LoginCommand}"                            
                            Content="Dodaj"
                            Click="btnTourAddCatKumite_Click"
                            Margin="10,0,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>

                        <Button x:Name="btnTourDeleteCatKumite"
                            Width="70"
                            Command="{Binding LoginCommand}"                            
                            Content="Usuń"
                            Click="btnTourDeleteCatKumite_Click"
                            Margin="10,0,0,0"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            Style="{StaticResource contentButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnTourDetailsKata"
                        Width="150"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding LoginCommand}"                            
                        Content="Podgląd listy kata"
                        Click="btnTourDetailsKata_Click"
                        Margin="0,0,20,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        Style="{StaticResource contentButton}"/>
                <Button x:Name="btnTourDetailsKumite"
                        Width="150"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding LoginCommand}"                            
                        Content="Podgląd listy kata"
                        Click="btnTourDetailsKumite_Click"
                        Margin="0,0,20,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        Style="{StaticResource contentButton}"/>
            </Grid>
        </Grid>
    </ScrollViewer>
        </TabItem>
        <TabItem Header="Przypisz do kategori"
                 Style="{StaticResource tabItem}">

            <ScrollViewer Margin="0,0,0,0"
                          Style="{StaticResource CustomScrollViewer}">
                <Grid Margin="15,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="350"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            BorderThickness="0,0,0,1"
                            BorderBrush="#5D83B1"
                            Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                                <TextBlock Text="Turniej:"
                                           FontSize="16"
                                           FontFamily="Montserrat"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <ComboBox x:Name="cbTour"
                                          Width="350"
                                          Style="{StaticResource comboboxStyle}"
                                          Margin="10,0,0,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <Button x:Name="btnSetAutomaticCompToCat" 
                            Grid.Column="1"
                            Command="{Binding LoginCommand}"                            
                            Content="Przypisz automatycznie"                            
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            BorderThickness="0"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Style="{StaticResource contentButton}">
                            </Button>
                        </Grid>
                    </Border>
                    <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                        <TextBlock Text="Kategorie Kata:"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbTourCatKata"
                              Width="292"
                              Style="{StaticResource comboboxStyle}"
                              Margin="10,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <Border Grid.Row="2"
                            BorderThickness="0,0,0,1"
                            BorderBrush="#5D83B1"
                            Margin="0,0,0,0">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Lista zawodników kata"
                                           FontFamily="Montserrat"
                                           FontSize="20"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                                          Style="{DynamicResource DataGridStyle1}"
                                          Height="265">

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="ID" HeaderStringFormat=""/>
                                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Imię"/>
                                        <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Nazwisko"/>
